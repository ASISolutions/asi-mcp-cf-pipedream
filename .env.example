# Copy this file to .env and fill in your values for local development

# Cloudflare Access OAuth configuration (from Access for SaaS application):
ACCESS_CLIENT_ID=your-access-client-id
ACCESS_CLIENT_SECRET=your-access-client-secret
ACCESS_AUTHORIZATION_URL=https://<your-org>.cloudflareaccess.com/oauth2/v2/auth
ACCESS_TOKEN_URL=https://<your-org>.cloudflareaccess.com/oauth2/v2/token
ACCESS_JWKS_URL=https://<your-org>.cloudflareaccess.com/oauth2/v2/keys

# Cookie encryption key (generate with: openssl rand -hex 32):
COOKIE_ENCRYPTION_KEY=your-64-character-hex-key

# Pipedream Connect configuration
PIPEDREAM_CLIENT_ID=your-pipedream-client-id
PIPEDREAM_CLIENT_SECRET=your-pipedream-client-secret
PIPEDREAM_PROJECT_ID=proj_xxx
PIPEDREAM_ENV=development

# Optional redirect URIs for Connect links:
CONNECT_SUCCESS_REDIRECT=https://your-app.com/success
CONNECT_ERROR_REDIRECT=https://your-app.com/error